Global WindowMain

Global Headline, Subheadline, List, Score, Button

Enumeration FormFont
  #FontHeadline
  #Font
  #FontScore
EndEnumeration

LoadFont(#FontHeadline,"Arial", 20)
LoadFont(#Font,"Arial", 10)
LoadFont(#FontScore,"Arial", 30)


Procedure OpenWindowMain(x = 0, y = 0, width = 600, height = 260)
  WindowMain = OpenWindow(#PB_Any, x, y, width, height, "", #PB_Window_SystemMenu)
  Headline = TextGadget(#PB_Any, 10, 10, 580, 40, "Windows Experience Index")
  SetGadgetFont(Headline, FontID(#FontHeadline))
  Subheadline = TextGadget(#PB_Any, 10, 50, 570, 25, "Your computer has a Windows Experience Index base score of")
  SetGadgetFont(Subheadline, FontID(#Font))

  List = ListIconGadget(#PB_Any, 10, 80, 580, 130, "Component", 120, #PB_ListIcon_FullRowSelect)
  AddGadgetColumn(List, 1, "What is rated", 295)
  AddGadgetColumn(List, 2, "Subscore", 80)
  AddGadgetColumn(List, 3, "Base score", 80)
  SetGadgetFont(List, FontID(#Font))
  
  AddGadgetItem(List, -1, "Processor"			+ chr(10) + "Calculations per second"					+ chr(10) + "-")
  AddGadgetItem(List, -1, "Memory (RAM)"		+ chr(10) + "Memory operatins per second"				+ chr(10) + "-")
  AddGadgetItem(List, -1, "Graphics"			+ chr(10) + "Desktop graphics performance"				+ chr(10) + "-")
  AddGadgetItem(List, -1, "Gaming graphics"	+ chr(10) + "3D business and gaming graphics performance"	+ chr(10) + "-")
  AddGadgetItem(List, -1, "Primary hard disk"	+ chr(10) + "Disk data transfer rate"					+ chr(10) + "-")

  Button = ButtonGadget(#PB_Any, 230, 220, 100, 25, "Update my score")

  UseGadgetList(GadgetID(List))
  ScoreBackground = CanvasGadget(#PB_Any, 495, 24, 80, 110)
  StartDrawing(CanvasOutput(ScoreBackground))
    Box(0, 0, 80, 110, GetSysColor_(#COLOR_BTNFACE))
  StopDrawing()
  Score = TextGadget(#PB_Any, 495, 52, 80, 45, "-", #PB_Text_Center)
  SetGadgetFont(Score, FontID(#FontScore))

  SetWindowTitle(WindowMain, GetGadgetText(Headline))
EndProcedure

Procedure WindowMain_Events(event)
  Select event
    Case #PB_Event_CloseWindow
      ProcedureReturn #False

    Case #PB_Event_Menu
      Select EventMenu()
      EndSelect

    Case #PB_Event_Gadget
      Select EventGadget()
      EndSelect
  EndSelect
  ProcedureReturn #True
EndProcedure
